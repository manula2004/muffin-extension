{
  "manifest_version": 3,
  "name": "Muffin - Price Checker",
  "version": "1.0",
  "description": "Find better prices for the products you're viewing.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"]
}
